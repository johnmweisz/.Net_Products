@model AddNewOrRef

<div class="container">
    <div class="left">
        <form asp-action="NewProduct" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="Product.Name"></label>
                <span asp-validation-for="Product.Name"></span>
                <input class="form-control" asp-for="Product.Name">
            </div>
            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <span asp-validation-for="Product.Description"></span>
                <input class="form-control" asp-for="Product.Description">
            </div>
            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <span asp-validation-for="Product.Price"></span>
                <input class="form-control" asp-for="Product.Price">
            </div>    
            <button>Submit</button>
        </form>
    </div>
    <div class="right">
        @{
            foreach(var product in Model.Products)
            {
                <div>
                    <a href="products/@product.ProductId">@product.Name</a>
                </div>
            }
        }
    </div>
</div>

